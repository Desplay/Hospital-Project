.col-xl-3.col-md-6.mb-4
    a(href="/doctor/abc")
        .card.border-left-info.shadow.h-100.py-2
            .card-body
                .row.no-gutters.align-items-center
                    .col.mr-2 
                        .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Doctor #{doctor.name}
                        .row.no-gutters.align-items-center
                            .col-auto
                                -
                                    var percent ="width: " + Math.floor(doctor.patients.length / doctor.slot * 100) + '%';
                                    var slot_empty = doctor.patients.length + '/' + doctor.slot;
                                .h5.mb-0.mr-3.font-weight-bold.text-gray-800 #{slot_empty}
                            .col
                                .progress.progress-sm.mr-2
                                    div(class="progress-bar bg-info" role="progressbar" style=percent aria-valuenow="1" aria-valuemin="0" aria-valuemax="3")
                    .col-auto
                        i.fas.fa-user-doctor.fa-2x.text-gray-300