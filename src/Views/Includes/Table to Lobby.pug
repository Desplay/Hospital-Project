.container-fluid
    .card.shadow.mb-4
        .card-header.py-3.d-flex.justify-content-between.align-items-center
            h4(class="m-0 font-weight-bold text-primary") Disease level table
            form(action="/lobby/pop" role="form" id="form" name="form" method="post")
                button(type="submit" id="submit-button").btn.btn-primary.btn-icon-split.form-control
                    span.text Move Patients
                    span.icon.text-white-50
                        i.fas.fa-arrow-right
                
        .card-body
            .table-responsive
                .dataTables_wrapper.dt-bootstrap4
                    .row
                        .col-sm-12
                            table(class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;")
                                thead
                                    tr
                                        th #
                                        th Name
                                        th Age
                                        th Gender
                                        th Time Add
                                        th Disease
                                        th Additional message
                                tfoot
                                    tr
                                        th #
                                        th Name
                                        th Age
                                        th Gender
                                        th Time Add
                                        th Disease
                                        th Additional message
                                tbody
                                    - var x = 0;
                                    each patient in datapatients
                                        - var check = x < 3;
                                            if(check)
                                                tr
                                                    td #{++x}
                                                    td 
                                                        - var link = "/edit-patient-" + patient.IDCode
                                                        a(href=link)._parent #{patient.name}
                                                    td #{patient.age}
                                                    td #{patient.gender.value}
                                                    td #{patient.date}
                                                    td #{patient.disease.name}
                                                    td #{patient.message}